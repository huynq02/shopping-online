                <div class="col-sm-9">
                    <div class="blog-post-area">
                        <h2 class="title text-center">Blog Detail</h2>
                        <div class="single-blog-post">
                            <h3>@Model.bg.blog_title</h3>
                            <div class="post-meta">
                                <ul>
                                    <li><i class="fa fa-user"></i>@Model.bg.blog_author</li>
                                    <li><i class="fa fa-clock-o"></i> 1:33 pm</li>
                                    <li><i class="fa fa-calendar"></i>@Model.bg.blog_createdate</li>
                                </ul>
                            </div>
                            <div>
                                @Html.Raw(Model.bg.blog_detail)
                            </div>

                        </div>
                    </div><!--/blog-post-area-->

                    <div class="rating-area">
                        <ul class="ratings">
                            <li class="rate-this">Rate this item:</li>
                            <li>
                                <i class="fa fa-star color"></i>
                                <i class="fa fa-star color"></i>
                                <i class="fa fa-star color"></i>
                                <i class="fa fa-star"></i>
