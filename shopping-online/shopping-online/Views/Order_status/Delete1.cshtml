@model shopping_online.Context.Order_status

@{
    Layout = "~/Views/Shared/OrderStatus.cshtml";
}


<header class="panel-heading">
    <h3>Are you sure you want to delete this?</h3>
</header>

<div class="form-horizontal">

    <div class="panel-body">
        <form role="form">
            <div class="form-group col-md-12">
                <label for="exampleInputEmail1">Order Status</label>
                @Html.DisplayFor(model => model.Order_status_status)
            </div>



            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color text-center">
                    <input type="submit" value="Delete" class="btn btn-default" />
                </div>
                <hr />
                <div class=" add-task-row col-md-12">
                    <button type="submit" class="btn btn-info">
                        @Html.ActionLink("Back to List", "Index")
                    </button>
                </div>
            }

        </form>
    </div>
</div>
