@model IEnumerable<shopping_online.Context.Order_status>

@{
    Layout = "~/Views/Shared/OrderStatus.cshtml";
}


<div class="col-xs-12">
    <div class="panel">
        <header class="panel-heading">
            List Order

        </header>


        <div class="panel-body table-responsive">

            @if (User.IsInRole("Sale"))
            {<div class=" add-task-row">
    <p class="btn btn-success btn-sm pull-left">
        @Html.ActionLink("Create New", "Create")
    </p>
</div>
                    }
             
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                <p>Order Status</p>
                            </th>
                            @if (User.IsInRole("Sale"))
                            {
                                <th>
                                    <p>Action</p>
                                </th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Order_status_status)
                                </td>

                                @if (User.IsInRole("Sale"))
                                {
                                    <td>
                                        <a href="~/Order_status/Edit/@item.Order_status_id"><button class="btn btn-default btn-xs"><i class="fa fa-pencil"></i></button></a>
                                        <a href="~/Order_status/Delete/@item.Order_status_id"><button class="btn btn-default btn-xs"><i class="fa fa-times"></i></button></a>
                                    </td>
                                }

                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /.box-body -->
    </div><!-- /.box -->
</div>