@model shopping_online.Context.Order_status

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/OrderStatus.cshtml";
}

<header class="panel-heading">
    <h3>Are you sure you want to delete this?</h3>
</header>
<div>
    <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Order status</label>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Order_status_status)
        </div>
    </div>



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center">
            <input type="submit" value="Delete" class="btn btn-default" />

        </div>
    }
    <hr />
    <div class=" add-task-row col-md-12">
        <button type="submit" class="btn btn-info">
            @Html.ActionLink("Back to List", "Index")
        </button>
    </div>
</div>
