                                               data-val-required="ProductName is not empty"
                                               id="ProductName" placeholder="ProductName" value="" />
                                        @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Description Product</label>
                                        @*@Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })*@
                                        <input type="text" name="Description" class="form-control text-box single-line" data-val="true"
                                               data-val-length="Use 5-100 characters" data-val-length-max="100" data-val-length-min="5"
                                               data-val-required="Descriptions is not empty"
                                               id="Description" placeholder="Description" value="" />
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Product Image</label>
                                        <input type="file" name="ImageProduct" class="single-line" data-val="true" data-val-required="ImageProduct is not empty"
                                               id="ImageProduct" value="" />
                                        @Html.ValidationMessageFor(model => model.ImageProduct, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Price</label>
                                        @*@Html.EditorFor(model => model.ProductPrice, new { htmlAttributes = new { @class = "form-control" } })*@
                                        <input type="text" name="ProductPrice" class="form-control text-box single-line" data-val="true"
                                               data-val-regex="ProductPrice is a number"
                                               data-val-regex-pattern="^[0-9.]+$"
                                               data-val-required="ProductPrice is not empty" id="ProductPrice" placeholder="Price" value="" />
                                        @Html.ValidationMessageFor(model => model.ProductPrice, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Quantity</label>
                                        @*@Html.EditorFor(model => model.ProductQuanity, new { htmlAttributes = new { @class = "form-control" } })*@
                                        <input type="text" name="ProductQuanity" class="form-control text-box single-line" data-val="true"
                                               data-val-regex="ProductQuanity is a number"
                                               data-val-regex-pattern="^[0-9.]+$"
                                               data-val-required="ProductQuanity is not empty" id="ProductQuanity" placeholder="Quantity" value="" />
                                        @Html.ValidationMessageFor(model => model.ProductQuanity, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Color</label> <br />
                                        @foreach (var item in Model.lstColor)
                                        {
                                            <div style="display: inline-block; margin-right: 20px">
                                                <input type="radio" name="ColorID" value="@item.color_id" class="single-line" data-val="true"
                                                       data-val-required="Color is not empty" id="ColorID" value="" />@item.color_name
                                                </div>
                                            }
                                        @Html.ValidationMessageFor(model => model.ColorID, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Category</label> <br />
                                        @foreach (var item in Model.lstCategories)
                                        {
                                            <div style="display: inline-block; margin-right: 20px">
                                                <input type="radio" name="CategoryID" value="@item.category_id" class="single-line" data-val="true"
                                                       data-val-required="Category is not empty" id="CategoryID" value="" />@item.category_name
                                                </div>
                                            }
                                        @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Status</label> <br />
                                        @foreach (var item in Model.lstStatus)
                                        {
                                            <div style="display: inline-block; margin-right: 20px">
                                                <input type="radio" name="StatusID" value="@item.status_product_id" class="single-line" data-val="true"
                                                       data-val-required="Status is not empty" id="StatusID" value="" />@item.status_product_status
                                                </div>
                                            }
                                        @Html.ValidationMessageFor(model => model.StatusID, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Create Date</label>
                                        @*@Html.EditorFor(model => model.CreateDate, new { htmlAttributes = new { @class = "form-control" } })*@
                                        <input type="date" name="CreateDate" class="form-control single-line" data-val="true"
                                               data-val-required="CreateDate is not empty" id="CreateDate" value="" />
                                        @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Back_Link</label>
                                        @*@Html.EditorFor(model => model.CreateDate, new { htmlAttributes = new { @class = "form-control" } })*@
