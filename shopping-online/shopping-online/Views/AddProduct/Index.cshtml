                                               data-val-regex="ProductPrice is a number" 
                                               data-val-regex-pattern="^[0-9.]+$"
                                               data-val-required="ProductPrice is not empty" id="ProductPrice" placeholder="Price" value=""/>
                                        @Html.ValidationMessageFor(model => model.ProductPrice, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Quantity</label>
                                        @*@Html.EditorFor(model => model.ProductQuanity, new { htmlAttributes = new { @class = "form-control" } })*@
                                        <input type="text" name="ProductQuanity" class="form-control text-box single-line" data-val="true" 
                                               data-val-regex="ProductQuanity is a number" 
                                               data-val-regex-pattern="^[0-9.]+$"
                                               data-val-required="ProductQuanity is not empty" id="ProductQuanity" placeholder="Quantity" value=""/>
                                        @Html.ValidationMessageFor(model => model.ProductQuanity, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Color</label> <br />
                                        @foreach (var item in Model.lstColor)
                                        {
                                            <div style="display: inline-block; margin-right: 20px"><input type="radio" name="ColorID" value="@item.color_id" class="single-line" data-val="true" 
                                                                                                          data-val-required="Color is not empty" id="ColorID" value=""/>@item.color_name</div>
