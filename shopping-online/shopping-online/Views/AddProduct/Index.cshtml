                                               data-val-required="Back_Link is not empty" id="Back_Link" value="" />
                                        @Html.ValidationMessageFor(model => model.Back_Link, "", new { @class = "text-danger" })
                                    </div>
                                    @if (User.IsInRole("Marketing"))
                                    {<button type="submit" class="btn btn-info">Add Product</button>
                                    }
                                    </form>

                            </div>
                        }
                    </section>
                </div>
            </div>
            <!-- row end -->
        </section><!-- /.content -->
        <div class="footer-main">
            Copyright &copy Director, 2022
        </div>
