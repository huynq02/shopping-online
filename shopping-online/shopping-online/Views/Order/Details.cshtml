@model shopping_online.Context.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/Order.cshtml";
}

<header class="panel-heading">
    Order Details
</header>
<div class="form-horizontal">

    <div class="panel-body">
        <form role="form">
            <div class="form-group col-md-12">
                <label for="exampleInputEmail1">User account:</label>

                @Html.DisplayFor(model => model.Account.account_username, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-md-12">
                <label for="exampleInputEmail1">User Phone:</label>

                @Html.DisplayFor(model => model.Account.account_phone, new { htmlAttributes = new { @class = "form-control" } })
                <div class="form-group col-md-12">
                    <label for="exampleInputEmail1">Note:</label>

                    <div class="form-group col-md-12">
                        <label for="exampleInputEmail1">Total Money:</label>

                        @Html.EditorFor(model => model.Order_total_money, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group col-md-12">
                        <label for="exampleInputEmail1">Order date:</label>

                        @Html.EditorFor(model => model.Order_Date, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group col-md-12">
                        <label for="exampleInputEmail1">Status</label>

                        @Html.EditorFor(model => model.Order_status.Order_status_status, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group col-md-12">
                        <label for="exampleInputEmail1">Ship</label>

                        @Html.EditorFor(model => model.shipping.shipping_name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
        </form>
    </div>
    <header class="panel-heading">
        Product details
    </header>
    <div class="panel-body table-responsive">
        <table class="table table-hover">
            <tr>
                <th>
                    <p>Product Name</p>
                </th>
                <th>
                    <p>Product Image</p>
                </th>
                <th>
                    <p> Details price </p>
                </th>
                <th>
                    <p>Quannlity</p>
                </th>
                <th>
                    <p>Total product</p>
                </th>
            </tr>

            @foreach (var item in Model.Order_Details)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.product.product_name)
                    </td>
                    <td>
                        <img style="width:50px;height:50px" src="~/Content/img/ProImage/@Html.DisplayFor(modelItem => item.product.product_image)" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order_Details_price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order_Details_num)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order_Details_total_number)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>