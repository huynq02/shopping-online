@model shopping_online.Context.Order

@{
    Layout = "~/Views/Shared/Order.cshtml";
}


<header class="panel-heading">
    <h3>Are you sure you want to delete this?</h3>
</header>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })


<div class="panel-body">
    <div class="form-group col-md-12">
        <label for="exampleInputEmail1">Account Name</label>
        @Html.EditorFor(model => model.Account.account_name, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group col-md-12">
        <label for="exampleInputEmail1">Total Money</label>
        @Html.EditorFor(model => model.Order_total_money, new { htmlAttributes = new { @class = "form-control" } })

    </div>
    <div class="form-group col-md-12">
        <label for="exampleInputEmail1">Order Date</label>
        @Html.EditorFor(model => model.Order_Date, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group col-md-12">
        <label for="exampleInputEmail1">Customer name</label>
        @Html.EditorFor(model => model.Account.account_username, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group col-md-12">
        <label for="exampleInputEmail1">Order status</label>
        @Html.EditorFor(model => model.Order_status.Order_status_status, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group col-md-12">
        <label for="exampleInputEmail1">Ship</label>
        @Html.EditorFor(model => model.shipping.shipping_name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color col text-center">
        <input type="submit" value="Delete" class="btn btn-default" />

    </div>
    <hr />
    <div class=" add-task-row">
        <button class="btn btn-info">
            @Html.ActionLink("Back to List", "Index")
        </button>
    </div>
}



