                                                <td style="padding-top:40px">@item.product_name</td>
                                                @foreach (var j in Model.color)
                                                {
                                                    if (item.color_id == j.color_id)
                                                    {
                                                        <td>@j.color_name</td>
                                                    }
                                                }
                                                <td>@item.product_price$</td>
                                                @foreach (var k in Model.stapro)
