    <aside class="right-side">

        <!-- Main content -->
        <section class="content">

            <!-- Main row -->
            <div class="row">
                <div class="col-md-8">
                    <section class="panel tasks-widget">
                        <header class="panel-heading">
                            Add Blog
                        </header>
                        @using (Html.BeginForm("Edit", "EditBlogAdmin", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="panel-body">
                                <form role="form">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Title</label>
                                        @Html.EditorFor(model => model.blog.blog_title, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.blog.blog_title, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Author</label>
                                        @Html.EditorFor(model => model.blog.blog_author, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.blog.blog_author, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Descriptions</label>
                                        @Html.EditorFor(model => model.blog.blog_descriptions, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.blog.blog_descriptions, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">CreateDate(yyyy-MM-dd)</label>
                                        @Html.EditorFor(model => model.blog.blog_createdate, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.blog.blog_createdate, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">CreateBy</label>
                                        @Html.EditorFor(model => model.blog.blog_createby, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.blog.blog_createby, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputFile">Cover</label>
                                        <input type="file" name="images" />
                                        <input type="hidden" name="img" value="@Model.blog.blog_images" />
                                    </div>
                                    <div>
                                        <label for="exampleInputFile">Content</label>
                                        @Html.TextAreaFor(model => model.blog.blog_detail, new { @class = "form-control summernote" })
                                        @Html.ValidationMessageFor(model => model.blog.blog_detail, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">ModifyDate(yyyy-MM-dd)</label>
                                        @Html.EditorFor(model => model.blog.blog_modifydate, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">ModifyBy</label>
                                        @Html.EditorFor(model => model.blog.blog_modifyby, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.blog.blog_modifyby, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Back_Link</label>
                                        @Html.EditorFor(model => model.blog.blog_back_link, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.blog.blog_back_link, "", new { @class = "text-danger" })
                                    </div>
                                    <input type="hidden" name="Id" value="@Model.blog.blog_id" />
                                    <input type="hidden" name="Back" value="@Model.blog.blog_back_link" />
                                    <button type="submit" class="btn btn-info">Save Blog</button>
                                </form>

                            </div>
                        }
                    </section>
                </div>
            </div>
            <!-- row end -->
