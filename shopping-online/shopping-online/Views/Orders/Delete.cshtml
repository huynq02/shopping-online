@model shopping_online.Context.Order

@{
    Layout = "~/Views/Shared/Order.cshtml";
}


<header class="panel-heading">
    <h3>Are you sure you want to delete this?</h3>
</header>

<div class="form-horizontal">

    <div class="panel-body">
        
            <div class="form-group col-md-12">
                <label for="exampleInputEmail1">Account Name</label>
                @Html.DisplayFor(model => model.Order_note)
            </div>

            <div class="form-group col-md-12">
                <label for="exampleInputEmail1">Total Money</label>

                @Html.DisplayFor(model => model.Order_total_money)

            </div>
            <div class="form-group col-md-12">
                <label for="exampleInputEmail1">Order Date</label>
                @Html.DisplayFor(model => model.Order_Date)
            </div>
            <div class="form-group col-md-12">
                <label for="exampleInputEmail1">Customer name</label>
                @Html.DisplayFor(model => model.Account.account_username)
            </div>
            <div class="form-group col-md-12">
                <label for="exampleInputEmail1">Order status</label>
                @Html.DisplayFor(model => model.Order_status.Order_status_status)
            </div>
            <div class="form-group col-md-12">
                <label for="exampleInputEmail1">Ship</label>

                @Html.DisplayFor(model => model.shipping.shipping_name)
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color text-center">
                    <input type="submit" value="Delete" class="btn btn-default" />
                </div>
                <hr/>
                <div class=" add-task-row col-md-12">
                    <button type="submit" class="btn btn-info">
                        @Html.ActionLink("Back to List", "Index")
                    </button>
                </div>
            }

      
    </div>
</div>
